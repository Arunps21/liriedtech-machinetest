<div class="max-w-xl mx-auto">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
            <h1 class="text-xl font-bold text-gray-900">Add New Product</h1>
            <p class="text-gray-500 text-sm mt-1">Fill in the details below</p>
        </div>

        <div class="p-6">
            <% if (typeof error !== 'undefined') { %>
                <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 text-sm" role="alert">
                    <p><%= error %></p>
                </div>
            <% } %>

            <form action="/products" method="POST" class="space-y-4">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Product Name</label>
                    <input type="text" name="name" id="name" required
                        class="w-full px-3 py-2 rounded-md border border-gray-300 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm transition-colors"
                        placeholder="e.g. Wireless Mouse">
                </div>

                <div>
                    <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                    <textarea name="description" id="description" rows="3"
                        class="w-full px-3 py-2 rounded-md border border-gray-300 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm transition-colors"
                        placeholder="Describe your product..."></textarea>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="price" class="block text-sm font-medium text-gray-700 mb-1">Price</label>
                        <div class="relative">
                            <span class="absolute left-3 top-2 text-gray-500 text-sm">â‚¹</span>
                            <input type="number" step="0.01" name="price" id="price" required
                                class="w-full pl-7 pr-3 py-2 rounded-md border border-gray-300 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm transition-colors"
                                placeholder="0.00">
                        </div>
                    </div>

                    <div>
                        <label for="quantity" class="block text-sm font-medium text-gray-700 mb-1">Quantity</label>
                        <input type="number" name="quantity" id="quantity" required
                            class="w-full px-3 py-2 rounded-md border border-gray-300 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm transition-colors"
                            placeholder="0">
                    </div>
                </div>

                <div class="flex justify-end gap-3 pt-4 border-t border-gray-100 mt-6">
                    <a href="/" class="px-4 py-2 rounded-md text-gray-700 font-medium hover:bg-gray-100 transition-colors text-sm">Cancel</a>
                    <button type="submit" 
                        class="px-4 py-2 bg-blue-600 text-white font-medium rounded-md shadow-sm hover:bg-blue-700 transition-colors text-sm">
                        Save Product
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
