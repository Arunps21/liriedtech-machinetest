<div class="space-y-6">
    
    <!-- Header -->
    <div class="flex justify-between items-end pb-4 border-b border-gray-200">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
            <p class="text-gray-500 mt-1 text-sm">Overview of your inventory</p>
        </div>
        <a href="/add-product" 
           class="bg-blue-600 text-white px-4 py-2 rounded-md font-medium shadow-sm hover:bg-blue-700 transition-colors flex items-center gap-2 text-sm">
            <span>+</span> Add Product
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
            <h3 class="text-gray-500 font-medium mb-1 text-sm">Total Products</h3>
            <p class="text-3xl font-bold text-gray-900"><%= report.totalProducts %></p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
            <h3 class="text-gray-500 font-medium mb-1 text-sm">Total Inventory Value</h3>
            <p class="text-3xl font-bold text-gray-900">₹<%= report.totalValue.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></p>
        </div>
    </div>

    <!-- Products Table -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
            <h2 class="text-lg font-semibold text-gray-800">Product List</h2>
        </div>
        
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-50 border-b border-gray-200">
                        <th class="px-6 py-3 font-medium text-gray-500 text-xs uppercase tracking-wider">Name</th>
                        <th class="px-6 py-3 font-medium text-gray-500 text-xs uppercase tracking-wider">Description</th>
                        <th class="px-6 py-3 font-medium text-gray-500 text-xs uppercase tracking-wider">Price</th>
                        <th class="px-6 py-3 font-medium text-gray-500 text-xs uppercase tracking-wider">Quantity</th>
                        <th class="px-6 py-3 font-medium text-gray-500 text-xs uppercase tracking-wider">Total</th>
                        <th class="px-6 py-3 font-medium text-gray-500 text-xs uppercase tracking-wider text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    <% products.forEach(product => { %>
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4 font-medium text-gray-900 text-sm"><%= product.name %></td>
                        <td class="px-6 py-4 text-gray-500 text-sm truncate max-w-xs"><%= product.description %></td>
                        <td class="px-6 py-4 text-gray-600 text-sm">₹<%= product.price %></td>
                        <td class="px-6 py-4 text-sm">
                            <span class="px-2 py-1 rounded-full text-xs font-medium 
                                <%= product.quantity > 0 ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                <%= product.quantity %>
                            </span>
                        </td>
                        <td class="px-6 py-4 text-gray-600 font-medium text-sm">₹<%= (product.price * product.quantity).toFixed(2) %></td>
                        <td class="px-6 py-4 text-right space-x-2 text-sm">
                            <a href="/edit-product/<%= product.id %>" class="text-blue-600 hover:text-blue-800 font-medium transition-colors">Edit</a>
                            
                            <form action="/products/<%= product.id %>?_method=DELETE" method="POST" class="inline-block" onsubmit="return confirm('Are you sure?');">
                                <button type="submit" class="text-red-600 hover:text-red-800 font-medium transition-colors">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                    <% if (products.length === 0) { %>
                    <tr>
                        <td colspan="5" class="px-6 py-8 text-center text-gray-500 text-sm">
                            No products found. Start by adding one!
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
